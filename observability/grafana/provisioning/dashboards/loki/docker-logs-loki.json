{
  "uid": "docker-loki-logs",
  "title": "Docker Containers â€“ Loki Logs",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "tags": ["docker", "loki", "logs"],
  "templating": {
    "list": [
      {
        "name": "host",
        "type": "query",
        "datasource": "Loki",
        "label": "Host",
        "query": "label_values({host=~\".+\"}, host)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".+",
        "multi": false,
        "current": {
          "text": "All",
          "value": ".+"
        }
      },
      {
        "name": "container",
        "type": "query",
        "datasource": "Loki",
        "label": "Container",
        "query": "label_values({host=~\"$host\"}, container)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".+",
        "multi": true,
        "current": {
          "text": ["All"],
          "value": [".+"]
        }
      },
      {
        "name": "level",
        "type": "custom",
        "label": "Log Level",
        "query": "INFO : INFO , WARN : WARN , ERROR : ERROR",
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "text": "ALL",
          "value": ".*"
        }
      }
    ]
  },
  "panels": [
    {
      "type": "logs",
      "title": "Container Logs",
      "datasource": "Loki",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 10 },
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true
      },
      "targets": [
        {
          "expr": "{host=~\"$host\", container=~\"$container\"} |~ \"$level\"",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Log Rate by Container (logs/sec)",
      "datasource": "Loki",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (container) (rate({host=~\"$host\", container=~\"$container\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error Rate by Container",
      "datasource": "Loki",
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (container) (rate({host=~\"$host\", container=~\"$container\"} |~ \"ERROR\"[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "barchart",
      "title": "Top Noisy Containers (logs/sec)",
      "datasource": "Loki",
      "gridPos": { "x": 0, "y": 18, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "topk(5, sum by (container) (rate({host=~\"$host\", container=~\"$container\"}[1m])))",
          "refId": "A"
        }
      ]
    }
  ]
}
